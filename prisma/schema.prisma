generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? 
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(USER)
  accounts      Account[]
  sessions      Session[]
  events        UserEvent[]
  recommendations EventRecommendation[]
  wishlistItems WishlistItem[]
}

enum Role {
  USER
  ADMIN
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Product {
  id          String    @id @default(cuid())
  sourceSite  String?
  name        String?
  category    String?
  price       Decimal?  @db.Decimal(10, 2)
  image       String?
  url         String?   @unique
  brand       String?
  color       String?
  sizeOptions String[]
  rawData     Json?
  createdAt   DateTime  @default(now())
  wishlistItems WishlistItem[]
}

model UserEvent {
  id              String    @id @default(cuid())
  userId          String
  providerEventId String
  title           String
  description     String?
  startTime       DateTime
  endTime         DateTime?
  location        String?
  occasionLabel   String?
  rawData         Json?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  user            User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  recommendations EventRecommendation[]

  @@unique([userId, providerEventId])
}

model EventRecommendation {
  id                 String   @id @default(cuid())
  userId             String
  eventId            String
  recommendationJson Json
  createdAt          DateTime @default(now())

  user   User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  event  UserEvent @relation(fields: [eventId], references: [id], onDelete: Cascade)
}

model WishlistItem {
  id                 String   @id @default(cuid())
  userId             String
  productId          String?
  externalProductUrl String?
  label              String?
  meta               Json?
  createdAt          DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product? @relation(fields: [productId], references: [id])
}
